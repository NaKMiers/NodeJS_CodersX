extends ../partials/header

block header
	.container
		h1 Create Product

		if (errors)
			each error in errors
				.alert.alert-danger= error

		form(method="POST")
			.form-group
				label(for='name') Product name
				input#name.form-control(type='text', name="name", value= values ? values.name : '', placeholder='Enter product name')
			.form-group
				label(for='description') Description
				input#description.form-control(type='text', name="description", value= values ? values.description : '', placeholder='Enter description')
			.form-group
				label(for='price') Price
				input#price.form-control(type='number', name="price", value= values ? values.price : '', placeholder='Enter price')
			.form-group
				label(for='image') Image
				input#image.form-control(type='text', name="image", value= values ? values.image : '', placeholder='Enter image url')
			button.btn.btn-primary Add
