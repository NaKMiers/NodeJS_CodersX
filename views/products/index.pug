extends ../partials/header

block header
	.container
		h1
			span Productions
				a(href="/products/create" class="btn btn-primary ml-2") New

		.row
			each product in productions
				.col.col-sm-6.col-lg-3.mt-4(style="")
					.card(style="height: 100%")
						img.card-img-top(src=product.image)
						.card-body
							h5.card-title=product.name
							p.card-text=product.description
							a.btn.btn-primary.reponsive(href='#') Buy

		nav.mt-4(aria-label='Page navigation example')
			ul.pagination.justify-content-center
				li.page-item
					a.page-link(href='/products?page=' + (curPage-1)) Previous

					each page in countAr
						li.page-item
							a.page-link(href='/products?page=' + page, style= page==curPage ? "background-color: #ccc" : "")= page

				li.page-item
					a.page-link(href='/products?page=' + (curPage+1)) Next

			

