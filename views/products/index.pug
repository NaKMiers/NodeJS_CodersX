extends ../partials/header

block header
	.container
		h1
			span 
				a(href="/products" style="color: #f44336") Productions
				a(href="/products/create" class="btn btn-primary ml-2") New

		form(method='GET', action='/products/search', class="d-flex ml-auto mt-3")
			input(type="text", name="q", class="form-control mr-2")
			button(class="btn btn-primary") Search

		.row
			each product in productions
				.col.col-sm-6.col-lg-3.mt-4
					.card(style="height: 100%")
						img.card-img-top(src=product.image)
						.card-body
							h5.card-title=product.name
							p.card-text=product.description
							a.btn.btn-primary.reponsive(href="/cart/add/" + product.id) Add to cart

