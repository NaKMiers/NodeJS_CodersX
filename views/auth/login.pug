extends ../partials/header

block header
	.container
		h1 Login

		if (errors)
			each error in errors
				.alert.alert-danger= error

		form(method="POST")
			label(for="name", style="cursor: pointer") Email
			div(class="d-flex mb-2")
				input(type="text", name="email", id="email", value=values ? values.email : '' class="form-control mr-2", placeholder="Enter email")

			label(for="phone", style="cursor: pointer") Password
			div(class="d-flex mb-2")
				input(type="password", name="password", id="password", value=values ? values.password : '' class="form-control mr-2", placeholder="Enter password")

			button(class="btn btn-primary mt-2") Login