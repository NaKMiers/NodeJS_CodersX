extends ../partials/header

block header
	div(class="container")
		h1
			span Users
			a(href="/users/create" class="btn btn-primary ml-2") New
		
		form(method='GET', action='/users/search', class="d-flex ml-auto mt-3")
			input(type="text", name="q", class="form-control mr-2")
			button(class="btn btn-primary") Search

		table.table
			tr
				th Avatar
				th Name
				th Phone
				th Actions

			each user in users
				tr
					td
						img(src=user.avatar, width="64px")
					td= user.name
					td=user.phone
					td
						a.btn.btn-light(href="/users/" + user.id) View
