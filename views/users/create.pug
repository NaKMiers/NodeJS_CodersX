extends ../partials/header

block header
	.container
		h1 Create user

		if (errors)
			each error in errors
				.alert.alert-danger= error

		form(method="POST", action="/users/create")
			label(for="name", style="cursor: pointer") Name
			div(class="d-flex mb-2")
				input(type="text", name="name", id="name", value=values ? values.name : '' class="form-control mr-2", placeholder="Enter user's name")

			label(for="phone", style="cursor: pointer") Phone
			div(class="d-flex mb-2")
				input(type="text", name="phone", id="phone", value=values ? values.phone : '' class="form-control mr-2", placeholder="Enter phone number")
			button(class="btn btn-primary mt-2") Create